{
  "name": "wordle-gtk",
  "version": "1.0.0",
  "description": "Wordle clone using react native and GTK4",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "build": "ncc build --minify src/index.tsx -o dist",
    "build:debug": "tsc --sourceMap",
    "start": "npm run build && node dist/index.js",
    "test": "jest",
    "flatpak:build": "flatpak-builder --force-clean --bundle-sources build com.rodrigotavares.Wordle.yml",
    "flatpak:install": "flatpak-builder --user --install --force-clean build com.rodrigotavares.Wordle.yml",
    "flatpak:bundle": "flatpak build-export export build && flatpak build-bundle export wordle-gtk.flatpak com.rodrigotavares.Wordle",
    "flatpak:run": "flatpak run com.rodrigotavares.Wordle"
  },
  "dependencies": {
    "@girs/node-adw-1": "^1.4.3-3.3.0",
    "@girs/node-gtk-4.0": "^4.12.5-3.3.0",
    "react": "^18.2.0",
    "react-native-gtk4": "^1.28.0",
    "reflect-metadata": "^0.2.1",
    "sequelize": "^6.37.1",
    "sequelize-typescript": "^2.1.6",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.66",
    "@types/validator": "^13.11.9",
    "@vercel/ncc": "^0.38.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2"
  }
}
